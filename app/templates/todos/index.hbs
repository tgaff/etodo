   <ul id="todo-list">
      {{#each itemController="todo"}}
        <li {{bind-attr class="model.isCompleted:completed isEditing:editing"}}>
          {{#if isEditing}}
            {{input class="edit" type="text" value=model.title focus-out="acceptChanges" insert-newline="acceptChanges"}}
          {{else}}
            {{input type="checkbox" checked=model.isCompleted class="toggle"}}
            <label {{action "editTodo" on="doubleClick"}}>{{model.title}}</label>
            <button {{action "removeTodo"}} class="destroy"></button>
          {{/if}}
        </li>
      {{/each}}
    </ul>
